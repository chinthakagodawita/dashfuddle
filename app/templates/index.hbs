<div class="row">
{{#if session.isAuthenticated}}
  <a href="#" {{action 'invalidateSession'}}>Logout</a>
{{else}}
  {{#link-to 'login'}}Login{{/link-to}}
{{/if}}
</div>

<h2>Projects</h2>
{{#power-select options=model selected=selectedProject onchange=(action "selectProject") as |project|}}
  {{project.title}}
{{/power-select}}

{{#if selectedProject}}
  {{#power-select options=tickets selected=selectedTicket onchange=(action "selectTicket") as |ticket|}}
    {{ticket.description}}
  {{/power-select}}
{{/if}}
